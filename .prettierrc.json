{
  "$schema": "http://json.schemastore.org/prettierrc",
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "singleAttributePerLine": false,
  "jsxSingleQuote": false,
  "printWidth": 100,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "auto",
  "tabWidth": 2,
  "overrides": [
    {
      "files": [
        ".eslintrc",
        ".huskyrc",
        ".prettierrc"
      ],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [
        "*.svg"
      ],
      "options": {
        "parser": "html"
      }
    }
  ]
}